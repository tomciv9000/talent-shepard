<h3>Register New Agency</h3>
<%= render "devise/shared/error_messages", resource: @agency %>
<%= form_for(@agency) do |f| %>
    
    <div class="form-row">
        <div class="col">
        <%= f.label :name, 'Name:' %>                                              
        <%= f.text_field :name, class: 'form-control', placeholder: 'Name of Agency' %>    
        </div>
        <div class="col">
        <%= f.label :email, 'Associated Email:' %>
        <%= f.text_field :email, class: 'form-control', placeholder: 'Associated Email Account', aria: { describedby: 'emailHelp'}  %>
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>    
        </div>
    </div>
        <br>
    <br>
    
    <%= f.submit "Register Agency", class: 'btn btn-primary' %>
    <% end %>
    