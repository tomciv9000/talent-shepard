<!DOCTYPE html>
<html>
  <head>
    <title>TalentShepherd</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
  <nav>
    <a href="<%= root_url %>"/> Home </a>
    <% if !current_user %>
      <a href="<%= new_user_path %>"/>Sign Up</a>
      <%= link_to "Log in", signin_path %>
    <% end %>
    <% if current_user %>
      <%= link_to "#{full_name(current_user)}'s profile", user_path(current_user)%>
      <%= link_to "Log Out", session_path, method:'delete' %>
    <% end %>

  </nav>
  <%= yield %>
  <body>
</html>
