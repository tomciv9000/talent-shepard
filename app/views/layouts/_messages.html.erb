<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
    <% flash.each do |type, msg| %>
      <% if type == "alert" %>
        <div class="alert alert-danger">
      <% end %>
      <% if type == "alert" %>
      <a href="#" class="close" data-dismiss="alert">&#215;</a>
      <ul>
        <li>
          <%= msg %>
        </li>
      </ul>
      <% end %>
    <% end %>
  </div>
</div>